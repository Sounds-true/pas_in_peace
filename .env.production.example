# Production Environment Configuration

# Environment
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_production_bot_token_here
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/webhook

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Database (Production PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@db-host:5432/pas_bot_prod

# Redis (Production)
REDIS_URL=redis://redis-host:6379/0

# Security
SECRET_KEY=generate_with_secrets.token_urlsafe_32
PII_ENCRYPTION_KEY=generate_with_secrets.token_urlsafe_32

# ML Models
EMOTION_DETECTION_MODEL=seara/rubert-base-go-emotions
CRISIS_DETECTION_MODEL=mental/mental-bert-base-uncased

# Thresholds (tuned for production)
SUICIDALBERT_THRESHOLD=0.7
EMOTION_CONFIDENCE_THRESHOLD=0.6

# Crisis Hotlines
CRISIS_HOTLINE_RU=8-800-2000-122
CRISIS_HOTLINE_INTL=+1-800-273-8255

# Rate Limiting
RATE_LIMIT_PER_USER=30  # messages per hour
RATE_LIMIT_GLOBAL=1000  # messages per hour

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=9090

# Performance
MAX_WORKERS=4
DB_POOL_SIZE=20
